{
    "name": "solana-e-commerce-tests",
    "version": "1.0.0",
    "license": "ISC",
    "scripts": {
        "test": "jest",
        "test:unit": "jest --testPathPattern=unit",
        "test:integration": "jest --testPathPattern=integration",
        "test:performance": "jest --testPathPattern=performance",
        "test:coverage": "jest --coverage",
        "test:anchor-coverage": "npm run build && cargo llvm-cov --manifest-path programs/solana-e-commerce/Cargo.toml --html --output-dir ./coverage/anchor",
        "test:full-coverage": "npm run test:coverage && npm run test:anchor-coverage",
        "test:system": "jest --testPathPattern=system",
        "test:merchant": "jest --testPathPattern=merchant",
        "test:product": "jest --testPathPattern=product",
        "test:search": "jest --testPathPattern=search",
        "test:unified": "ts-node tests/example-unified-test.ts",
        "test:framework": "ts-node tests/example-unified-test.ts",
        "test:all": "npm run test && npm run test:unified",
        "test:example": "npm run test:unified",
        "test:unit:mocha": "mocha tests/unit/**/*.test.ts --opts tests/unit/mocha.opts",
        "test:unit:merchant": "mocha tests/unit/instructions/merchant.test.ts --opts tests/unit/mocha.opts",
        "test:unit:product": "mocha tests/unit/instructions/product.test.ts --opts tests/unit/mocha.opts",
        "test:unit:order": "mocha tests/unit/instructions/order.test.ts --opts tests/unit/mocha.opts",
        "test:unit:payment": "mocha tests/unit/instructions/payment.test.ts --opts tests/unit/mocha.opts",
        "test:unit:initialize": "mocha tests/unit/instructions/initialize.test.ts --opts tests/unit/mocha.opts",
        "test:unit:coverage": "nyc mocha tests/unit/**/*.test.ts --opts tests/unit/mocha.opts",
        "perf:setup": "bash docs/scripts/setup.sh",
        "perf:local": "ts-node docs/scripts/local-performance-test.ts",
        "perf:testnet": "ts-node docs/scripts/testnet-small-scale-test.ts",
        "perf:testnet:multi": "ts-node docs/scripts/testnet-multi-merchant-test.ts --network=testnet",
        "perf:devnet:multi": "ts-node docs/scripts/testnet-multi-merchant-test.ts --network=devnet",
        "perf:realistic": "ts-node docs/scripts/realistic-performance-test.ts --network devnet --mode realistic",
        "perf:realistic:testnet": "ts-node docs/scripts/realistic-performance-test.ts --network testnet --mode realistic",
        "perf:quick": "ts-node docs/scripts/quick-performance-test.ts --network devnet",
        "perf:quick:testnet": "ts-node docs/scripts/quick-performance-test.ts --network testnet",
        "perf:large": "ts-node docs/scripts/large-scale-performance-test.ts --network devnet",
        "perf:large:testnet": "ts-node docs/scripts/large-scale-performance-test.ts --network testnet",
        "perf:large:mainnet": "ts-node docs/scripts/large-scale-performance-test.ts --network mainnet",
        "install-coverage": "cargo install cargo-llvm-cov",
        "build": "tsc",
        "bench": "cargo bench",
        "lint:fix": "prettier */*.js \"*/**/*{.js,.ts}\" -w",
        "lint": "prettier */*.js \"*/**/*{.js,.ts}\" --check"
    },
    "devDependencies": {
        "@coral-xyz/anchor": "^0.31.1",
        "@solana/spl-token": "^0.4.13",
        "@solana/web3.js": "^1.95.2",
        "@types/bn.js": "^5.1.0",
        "@types/chai": "^5.2.2",
        "@types/crypto-js": "^4.2.2",
        "@types/jest": "^29.5.12",
        "@types/mocha": "^10.0.10",
        "@types/node": "^24.0.3",
        "@types/node-fetch": "^2.6.12",
        "anchor-bankrun": "^0.5.0",
        "chai": "4",
        "crypto-js": "^4.2.0",
        "jest": "^29.7.0",
        "mocha": "^11.6.0",
        "prettier": "^2.6.2",
        "solana-bankrun": "^0.4.0",
        "ts-jest": "^29.4.0",
        "ts-mocha": "^11.1.0",
        "ts-node": "^10.9.1",
        "typescript": "^5.5.4"
    },
    "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e",
    "dependencies": {
        "@solana/kit": "^2.1.1",
        "axios": "^1.10.0",
        "cross-fetch": "^4.1.0"
    }
}
